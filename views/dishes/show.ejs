<% layout('layouts/boilerplate') %>

    <div class="container mt-3">

        <div class="my-3">
            <!-- CHANGE TO "BACK TO RESTAURANT" BUTTON -->
            <a href="/restaurants"><button type="button" class="btn btn-info">back to
                    all</button></a>
        </div>

        <div class="col">
            <div class="card bg-warning">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= dish.stringName %>
                    </h5>
                    <p class="card-text">

                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong>price: $<%= dish.price %></strong>
                        <div>
                            <form action="/menu/<%= dish.name %>?_method=PUT" method="POST">
                                <label for="price">update price: $</label>
                                <input type="number" id="price" name="dish[price]">
                                <button class="btn btn-info">submit</button>
                            </form>
                        </div>
                    </li>
                    <li class="list-group-item"><strong>ingredients:</strong>
                    </li>
                    <% for (let i of dish.ingredients) { %>
                        <li class="list-group-item">
                            <%= i %>
                        </li>
                        <% } %>
                </ul>
                <div class="card-body">
                    <a href="#" class="card-link btn btn-light">buy ingredients</a>
                </div>
            </div>
        </div>

    </div>